{% block title %}Medicament index{% endblock %}

{% block body %}
    <h1>Medicament index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>CodeProd</th>
            <th>PrixProd</th>
            <th>NoticeProd</th>
            <th>Fabriquant</th>
            <th>EstDisponible</th>
            <th>Expire_at</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td>{{ medicament.id }}</td>
                <td>{{ medicament.nom }}</td>
                <td>{{ medicament.codeProd }}</td>
                <td>{{ medicament.prixProd }}</td>
                <td>{{ medicament.noticeProd }}</td>
                <td>{{ medicament.fabriquant }}</td>
                <td>{{ medicament.estDisponible ? 'Yes' : 'No' }}</td>
                <td>{{ medicament.expireAt ? medicament.expireAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('medicament_show', {'id': medicament.id}) }}">show</a>
                    <a href="{{ path('medicament_edit', {'id': medicament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('medicament_new') }}">Create new</a>
