<form method="post" action="{{ path('fournisseur_delete', {'id': fournisseur.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce fournisseur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fournisseur.id) }}"><br>
    <button class="btn btn-danger">Supprimer</button>
</form>
