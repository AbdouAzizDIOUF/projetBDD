<form method="post" action="{{ path('rayon_delete', {'id': rayon.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce rayon?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rayon.id) }}"> <br>
    <button class="btn btn-danger">supprimer</button>
</form>
